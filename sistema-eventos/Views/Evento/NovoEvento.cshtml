@model EventosModel
@using sistema_eventos.Enum
@{
    ViewData["Title"] = "Novo evento";
}
<a asp-controller="Evento" asp-action="Index">
    <button class="btn btn-primary"><i class="fa-solid fa-arrow-left"></i></button>
</a>
<div style="background-color: white" class="container p-3 mt-3 rounded">
    <h3>Criar novo evento</h3>
    <form asp-controller="Evento" asp-action="NovoEvento" method="post">
        <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label">Titulo</label>
            <input type="text" asp-for=nome class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" required>
        </div>
        <div class="mb-3">
            <label for="exampleInputPassword1" class="form-label">Preço</label>
            <input type="text" asp-for=preco class="form-control" id="exampleInputPassword1" required>
        </div>
        <div class="mb-3">
            <label for="exampleInputPassword1" class="form-label">Data e hora</label>
            <input type="datetime-local" asp-for=data_hora class="form-control" id="exampleInputPassword1" required>
        </div>
        <div cclass="mb-3">
            <label class="control-label">Status</label>
            <select class="form-control" asp-for=status asp-items="Html.GetEnumSelectList<Status>()"></select>
        </div>
        <button type="submit" class="btn btn-primary mt-3">Salvar</button>
    </form>
</div>